<%= form_with(model: [business, business_social_media_site]) do |form| %>
  <% if business_social_media_site.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(business_social_media_site.errors.count, "error") %> prohibited this from being saved:</h2>

      <ul>
        <% business_social_media_site.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :social_media_site, style: "display: block" %>
    <%= form.select :social_media_site_id, SocialMediaSite.all.collect{|sms| [sms.name, sms.id]}, prompt: "Select a Social Media Site" %>
  </div>

  <div>
    <%= form.label :url, style: "display: block" %>
    <%= form.text_field :url %>
  </div>

  <br/>

  <div>
    <%= form.label :business, style: "display: block" %>
    <%= form.select :business_id, Business.all.collect{|b| [b.name, b.id]}, {selected: business.id}, prompt: "Select a Business" %>
  </div>

  <br/>

  <div>
    <%= form.submit %>
  </div>
<% end %>