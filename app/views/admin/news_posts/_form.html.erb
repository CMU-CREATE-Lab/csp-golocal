<%= form_with(model: news_post,
  url: news_post.persisted? ? admin_news_path(news_post) : admin_news_index_path,
  method: news_post.persisted? ? :patch : :post,
  local: true,
  data: { controller: "form-handler-markdown", action: "submit->form-handler-markdown#beforeSubmit" }
) do |form| %>
  <% if news_post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(news_post.errors.count, "error") %> prohibited this news_post from being saved:</h2>

      <ul>
        <% news_post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <small class="text-muted"><a target="_blank" href="https://commonmark.org/help/">Click Here</a> for more info about markdown syntax.</small>
    <%= form.text_area :content, data: { controller: "markdown" } %>
  </div>

  <div>
    <%= form.label :published, style: "display: block" %>
    <%= form.check_box :published %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
