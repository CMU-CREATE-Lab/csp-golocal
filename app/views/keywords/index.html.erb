<h1>Keywords</h1>

<p style="color: green"><%= notice %></p>

<% if @keywords.empty? %>
<p><i>No keywords to display.</i></p>
<% else %>
<table class="table">

<thead>
<tr>
  <th scope="col">ID</th>
  <th scope="col">Name</th>
  <th scope="col">Category</th>
  <th scope="col">Edit</th>
  <th scope="col">Delete</th>
</tr>
</thead>

<% @keywords.each do |keyword| %>
<tr>
  <th scope="row"><%= keyword.id %></th>
  <td><%= keyword.name %></td>
  <td><%= keyword.category %></td>
  <% if @business %>
  <td><%= link_to "Edit", edit_business_keyword_path(@business, keyword) %></td>
  <% else %>
  <td><%= link_to "Edit", edit_keyword_path(keyword) %></td>
  <% end %>
  <td><%= button_to "Delete", keyword, method: :delete %></td>
</tr>
<% end %>

</table>
<% end %>
<% if @business %>
<p><%= link_to "Create new", new_business_keyword_path(@business) %></p>
<p><%= link_to "Back to edit business", edit_business_path(@business) %></p>
<% else %>
<p><%= link_to "Create new", new_keyword_path %></p>
<% end %>
