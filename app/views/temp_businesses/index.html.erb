<div class="csp-header text-center">
  <div class="csp-header-buttons">
    <a href="#"><span class="glyphicon glyphicon-menu-hamburger"></span></a>
  </div>
  <h2 class="text-center"><a href="/">CSP GoLocal</a></h2>
</div>

<p style="color: green"><%= notice %></p>

<div class="container px-4">
  <h2>Find A Restaurant</h2>
  <div class="input-group">
    <input type="text" class="form-control input-lg" placeholder="Search by name" name="search">
    <div class="input-group-btn">
      <button id="btn-search" class="btn btn-lg" type="submit"><i class="glyphicon glyphicon-search"></i></button>
    </div>
  </div>
  <br/>
  <div class="csp-search-keywords">
    <a href="#"><span class="badge keywords-selected">Delivery</span></a>
    <a href="#"><span class="badge keywords-selected">Catering</span></a>
    <a href="#"><span class="badge">Vegetarian</span></a>
    <a href="#"><span class="badge">Vegan</span></a>
    <a href="#"><span class="badge">Gluten-Free</span></a>
  </div>
  <br/>
  <div class="btn-group csp-search-dropdown">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">Catering Options</button>
    <ul class="dropdown-menu" role="menu">
      <li><a href="#">Drop-Off</a></li>
      <li><a href="#">Setup</a></li>
      <li><a href="#">Full Service</a></li>
    </ul>
  </div>
</div>
<br/>
<div class="container px-4">
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 gx-5 gy-5">
    <% @temp_businesses.each do |temp_business| %>
    <div class="col">
      <a style="display:block; color: inherit; text-decoration: inherit;" href="/temp_businesses/<%= temp_business.id %>">
      <div class="p-3 border bg-light">
        <% if temp_business.logo.blank? %>
        <img src="/demophotos/1.png" alt="foobar" style="width:100%; height:250px; object-fit: cover;" />
        <% else %>
        <%= image_tag(temp_business.logo, :alt => "foobar", :style => "width:100%; height:250px; object-fit: cover;") %>
        <% end %>
        <h3><%= temp_business.name %></h3>
        <div class="csp-keywords">
          <% if temp_business.offers_delivery %><span class="badge blue">Delivery</span><% end %>
          <% if temp_business.offers_catering %><span class="badge blue">Catering</span><% end %>
          <% if temp_business.vegetarian_options %><span class="badge green">Vegetarian</span><% end %>
          <% if temp_business.vegan_options %><span class="badge green">Vegan</span><% end %>
          <% if temp_business.gluten_free_options %><span class="badge green">Gluten-Free</span><% end %>
          <% if temp_business.offers_delivery %><% end %>
          <span class="badge">Other</span>
          <span class="badge">Keywords</span>
          <span class="badge">Here</span>
        </div>
      </div>
      </a>
    </div>
    <% end %>
  </div>
</div>


<br/>
<br/>
<hr>
<hr>
<hr>
<br/>
<br/>

<%= link_to "Create new", new_temp_business_path %>


<script>

window.onload = function () {
  $("#btn-search").on("click", function () {
    console.log("click!");
  });
  $("div.csp-search-keywords a").on("click", function(event) {
    var target = event.target;
    $(target).toggleClass("keywords-selected");
    console.log("Toggle keyword: " + target.textContent);
  });
};
</script>
