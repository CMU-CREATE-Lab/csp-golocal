<div class="csp-header text-center red">
  <div class="csp-header-buttons">
    <a href="<%= temp_businesses_path %>"><span class="glyphicon glyphicon-arrow-left"></span></a>
  </div>
  <h2 class="text-center"><a href="/">CSP GoLocal</a></h2>
</div>

<p style="color: green"><%= notice %></p>

<div class="jumbotron text-center">
  <%= image_tag(@temp_business.logo, height: "400") %>
</div>

<div class="jumbotron text-center dark">
  <h1><%= @temp_business.name %></h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-10 dark">

      <div class="container csp-keywords">
        <span class="badge">Keywords</span>
        <span class="badge">Will</span>
        <span class="badge">Go</span>
        <span class="badge">Here</span>
        <span class="badge">fresh</span>
        <span class="badge">local</span>
        <span class="badge">social</span>
        <span class="badge">mobile</span>
        <span class="badge">solomo-bro</span>
        <span class="badge">#Hashtag</span>
        <span class="badge">2023</span>
        <span class="badge red">color?</span>
      </div>
      <br/>

      <div class="row">
        <div class="col-md-6 col-lg-6 green">
          <p><%= @temp_business.offers_delivery ? "✅" : "❌" %> Offers Delivery</p>
          <p><%= @temp_business.offers_catering ? "✅" : "❌" %> Offers Catering</p>
          <p><%= @temp_business.accepts_credit_cards ? "✅" : "❌" %> Accepts Credit Cards</p>
        </div>
        <div class="col-md-6 col-lg-6 green">
          <p><%= @temp_business.vegetarian_options ? "✅" : "❌" %> Vegetarian Options</p>
          <p><%= @temp_business.vegan_options ? "✅" : "❌" %> Vegan Options</p>
          <p><%= @temp_business.gluten_free_options ? "✅" : "❌" %> Gluten-free Options</p>
        </div>
      </div>

      <h4>Business Information</h4>

      <!-- Shout-out to https://glyphicons.com/ -->
      <% unless @temp_business.website_link.blank? %><h5><a target="_blank" href="<%= @temp_business.website_link %>"><span class="glyphicon glyphicon-globe"></span> Website Link</a></h5><% end %>
      <% unless @temp_business.website_link.blank? %><h5><a target="_blank" href="<%= @temp_business.menu_link %>"><span class="glyphicon glyphicon-paperclip"></span> Menu Link</a></h5><% end %>
<% unless @temp_business.address.blank? %>
      <h5><a target="_blank" href="#"><span class="glyphicon glyphicon-map-marker"></span> Address</a></h5>
      <p><%= @temp_business.address %></p>
<% end %>

      <br/>

      <div class="row">
        <div class="col-md-6 col-lg-6 green">
          <h4>Business Hours</h4>
          <%= simple_format @temp_business.business_hours %>
        </div>
<% if @temp_business.offers_catering %>
        <div class="col-md-6 col-lg-6 green">
          <h4>Catering Hours</h4>
          <%= simple_format @temp_business.catering_hours %>
        </div>
<% end %>
      </div>

<% if @temp_business.offers_catering %>
      <h4>Catering Details</h4>
      <p>Cater: drop-off, setup, full service ("pick-up only" option?)</p>
      <p>Order Sizes</p>
      <p>How to make a catering order: (including) Lead time for orders, policies like cancellation</p>
<% end %>

      <h4>Contact</h4>
      <% unless @temp_business.contact_email.blank? %><h5>Email: <%= @temp_business.contact_email %></h5><% end %>
      <% unless @temp_business.contact_phone.blank? %><h5>Phone: <%= @temp_business.contact_phone %></h5><% end %>
      <p><i>contact name and description will appear here. (<%= @temp_business.contact_name_description %>)</i></p>

      <br/>

<% unless @temp_business.gallery.empty? %>
      <h4>Photo Gallery</h4>
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <% first_indicator = true %>
          <% @temp_business.gallery.each_with_index do |photo, i| %>
          <% if first_indicator %>
          <li data-target="#myCarousel" data-slide-to="<%=i%>" class="active"></li>
          <% else %>
          <li data-target="#myCarousel" data-slide-to="<%=i%>"></li>
          <% end %>
          <% end %>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
        <% first_inner = true %>
        <% @temp_business.gallery.each do |photo| %>
          <% if first_inner %>
          <% first_inner = false %>
          <div class="item active">
          <% else %>
          <div class="item">
          <% end %>
            <%= image_tag(photo, height: '100%') %>
          </div>
        <% end %>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
<% end %>

      <h5><a href="#">Sustainability Score: <span class="glyphicon glyphicon-leaf"></span><span class="glyphicon glyphicon-leaf"></span><span class="glyphicon glyphicon-leaf"></span> (popup/modal explanation?)</a></h5>
      <h5><a href="#">Feedback (description and contact us/mailto link?)</a></h5>
    </div>
    <div class="col-md-2 col-lg-2">
    </div>
  </div>
</div>

<br/>
<br/>
<br/>

<div class="container">
  <%= link_to "Edit this temp business", edit_temp_business_path(@temp_business) %> |
  <%= link_to "Back to temp businesses", temp_businesses_path %>
</div>

<div class="container">
  <%= button_to "Destroy this temp business", @temp_business, method: :delete %>
</div>
