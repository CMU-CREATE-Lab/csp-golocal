<p style="color: green"><%= notice %></p>

<div class="jumbotron text-center">
  <%= image_tag(@temp_business.logo, height: "400") %>
</div>

<div class="jumbotron text-center dark">
  <h1><%= @temp_business.name %></h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-lg-10 dark">
      <h3>Column 1</h3>
      <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit...</p>
      <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris...</p>


      <h2>Gallery</h2>
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <% first_indicator = true %>
          <% @temp_business.gallery.each_with_index do |photo, i| %>
          <% if first_indicator %>
          <li data-target="#myCarousel" data-slide-to="<%=i%>" class="active"></li>
          <% else %>
          <li data-target="#myCarousel" data-slide-to="<%=i%>"></li>
          <% end %>
          <% end %>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
        <% first_inner = true %>
        <% @temp_business.gallery.each do |photo| %>
          <% if first_inner %>
          <% first_inner = false %>
          <div class="item active">
          <% else %>
          <div class="item">
          <% end %>
            <%= image_tag(photo, height: '100%') %>
          </div>
        <% end %>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>


    </div>
    <div class="col-md-4 col-lg-2">
    </div>
  </div>
</div>

<div>
  <%= link_to "Edit this temp business", edit_temp_business_path(@temp_business) %> |
  <%= link_to "Back to temp businesses", temp_businesses_path %>

  <%= button_to "Destroy this temp business", @temp_business, method: :delete %>
</div>
